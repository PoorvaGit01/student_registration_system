<h1>Register</h1>
<%= form_with model: @student, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :dob %>
    <%= form.date_select :dob %>
  </div>
  <div>
    <%= form.label :photo %>
    <%= form.file_field :photo %>
  </div>
  <div>
    <%= form.label :address %>
    <%= form.text_area :address %>
  </div>
  <div>
    <%= form.submit "Register" %>
  </div>
<% end %>