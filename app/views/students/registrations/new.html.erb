<h2>Student Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, class: "form-horizontal" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :name, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :dob, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.date_field :dob, autocomplete: "dob", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :address, autocomplete: "address", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "control-label col-sm-2" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :photo, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.file_field :photo, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>